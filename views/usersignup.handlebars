                            <div class="col-9 col-sm-12">
                                <input class="form-input" type="text" id="pw-input" placeholder="password">
                            </div>
                        </div>
                        
                        <button class="btn btn-primary" type="button" id="cancel-btn">Cancel</button>
                        <button class="btn btn-primary" type="submit" id="sign-up-btn">Submit</button>
            </div>
            </form>
            </span>
        </div>
    </div>

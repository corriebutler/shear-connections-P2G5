<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css?family=Didact Gothic"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Kalam"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://unpkg.com/spectre.css/dist/spectre.min.css"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/spectre.css/dist/spectre-exp.min.css"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/spectre.css/dist/spectre-icons.min.css"
    />
    <link rel="stylesheet" href="./assets/css/style.css" />
    <title>Shear Connections</title>
  </head>
  <body>
    <!-- navbar -->
    <header class="navbar p-sticky">
      <section class="navbar-section">
        <h1>
          <a href="./index.html" class="text-large text-light">Shear
            Connections!</a>
        </h1>
      </section>
      <section class="navbar-section just">
        <a href="/login" class="btn btn-lg col-3 m-1" id="login-btn">Login</a>
        <a href="/cosmosignup" class="btn btn-lg col-3 m-1">Cosmo Sign Up</a>
        <a href="/usersignup" class="btn btn-lg col-3 m-1">New User Sign Up</a>
        <a href="" id="modalBtn" class="btn btn-lg col-3 m-1">Leave a review</a>
        <!-- review modal -->
        <div class="modal" id="openModal">
          <a href="./index.html" class="modal-overlay" aria-label="Close"></a>
          <div class="modal-container">
            <div class="modal-header">
              <a
                href="/home"
                class="btn btn-clear float-right close-modal"
                aria-label="Close"
              ></a>
              <div class="modal-title h5">Leave a Review!</div>
            </div>
            <div class="modal-body">
              <!-- review dropdown button -->
              <div class="content dropdown">
                <div class="btn-group">
                  <a href="#" class="btn">Select Your Cosmetologist!</a>
                  <a href="#" class="btn dropdown-toggle" tabindex="0"><i
                      class="icon icon-caret"
                    ></i>
                  </a>
                  <!-- menu component -->
                  <ul class="menu">
                    ...
                  </ul>
                </div>
              </div>
              <!-- review dropdown button #2 -->
              <div class="content dropdown">
                <div class="btn-group">
                  <a href="#" class="btn">Rate Your Experience!</a>
                  <a href="#" class="btn dropdown-toggle" tabindex="0"><i
                      class="icon icon-caret"
                    ></i>
                  </a>
                  <!-- menu component -->
                  <ul class="menu">
                    ...
                  </ul>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <a href="./index.html" class="btn btn-primary">Submit</a>
            </div>
          </div>
        </div>
        <button class="btn btn-primary" type="submit" id="logout-btn">Log Out</button>
      </section>
    </header>
    <main>
      {{{body}}}
    </main>

    <script src="/javascript/logout.js"></script>
  </body>
</html>